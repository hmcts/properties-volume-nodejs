{
  "name": "@hmcts/properties-volume",
  "version": "1.3.0",
  "description": "Azure key-vault flex volume to express properties integration",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmcts/properties-volume-nodejs.git"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "lint": "tsc --noEmit && eslint ./src --ext .js,.ts",
    "prettier": "prettier --write \"**/*.{js,ts,json}\"",
    "prebuildOnly": "yarn clean && yarn format && yarn lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "yarn build --watch",
    "watch:test": "jest --watch"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "@hmcts/nodejs-logging": "^4.0.4",
    "js-yaml": "^4.1.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.21",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "config": "^3.3.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "29.7.0",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "5.5.2"
  },
  "resolutions": {
    "jws": "^3.2.3",
    "form-data": "^4.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.12.0"
}